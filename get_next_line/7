#include "get_next_line.h"

char	*only_one_line(char *s, char *d)
{
	size_t	i;
	size_t	j;

	i = 0;
	j = 0;
	while (s[i] != '\n' && s[i] != '\0')
	{
		if (s[i] == '\n')
		{
			break;
		}
		i++;
	}
	d = (char *)malloc(sizeof(char) * i + 1);
	while (j < i)
		d[j++] = s[j];
	return (d);
}
